{
  "gameName": "Neon Runner",
  "version": "1.0.0",
  "description": "A futuristic neon-themed endless runner game built with Three.js and Unity integration",
  
  "gameSettings": {
    "playerSpeed": 15,
    "gameSpeed": 20,
    "laneWidth": 4,
    "maxLanes": 3,
    "gravity": -25,
    "jumpForce": 15,
    "slideDuration": 0.5,
    "invincibilityTime": 2.0
  },
  
  "visualTheme": {
    "primaryColor": "#00ffff",
    "secondaryColor": "#ff00ff",
    "accentColor": "#ffff00",
    "backgroundColor": "#000011",
    "neonIntensity": 1.5,
    "bloomThreshold": 0.8,
    "bloomStrength": 1.0,
    "bloomRadius": 0.8
  },
  
  "player": {
    "model": "neon_runner_character",
    "scale": [0.8, 1.2, 0.4],
    "animations": {
      "idle": "idle_animation",
      "run": "run_animation",
      "jump": "jump_animation",
      "slide": "slide_animation",
      "death": "death_animation"
    },
    "effects": {
      "trail": {
        "enabled": true,
        "color": "#00ffff",
        "length": 20,
        "fadeTime": 0.5
      },
      "glow": {
        "enabled": true,
        "color": "#00ffff",
        "intensity": 2.0
      }
    }
  },
  
  "obstacles": {
    "types": [
      {
        "name": "neon_barrier",
        "model": "neon_barrier",
        "scale": [1.0, 2.0, 0.3],
        "color": "#ff0000",
        "damage": 1,
        "spawnRate": 0.3,
        "effects": {
          "pulse": true,
          "rotation": true,
          "glow": true
        }
      },
      {
        "name": "laser_wall",
        "model": "laser_wall",
        "scale": [4.0, 0.1, 0.1],
        "color": "#ff00ff",
        "damage": 2,
        "spawnRate": 0.2,
        "effects": {
          "beam": true,
          "flicker": true,
          "sound": "laser_hum"
        }
      },
      {
        "name": "energy_field",
        "model": "energy_field",
        "scale": [3.0, 3.0, 0.1],
        "color": "#ffff00",
        "damage": 1,
        "spawnRate": 0.15,
        "effects": {
          "electric": true,
          "particles": true,
          "sound": "electric_crackle"
        }
      }
    ]
  },
  
  "powerUps": {
    "types": [
      {
        "name": "speed_boost",
        "model": "speed_boost",
        "color": "#00ff00",
        "duration": 5.0,
        "effect": "multiply_speed",
        "multiplier": 1.5,
        "spawnRate": 0.1,
        "effects": {
          "sparkles": true,
          "trail": true
        }
      },
      {
        "name": "shield",
        "model": "shield",
        "color": "#0088ff",
        "duration": 8.0,
        "effect": "invincibility",
        "spawnRate": 0.08,
        "effects": {
          "bubble": true,
          "glow": true
        }
      },
      {
        "name": "magnet",
        "model": "magnet",
        "color": "#ff8800",
        "duration": 6.0,
        "effect": "attract_coins",
        "radius": 5.0,
        "spawnRate": 0.12,
        "effects": {
          "magnetic_field": true,
          "particles": true
        }
      }
    ]
  },
  
  "collectibles": {
    "coins": {
      "model": "neon_coin",
      "scale": [0.3, 0.3, 0.1],
      "color": "#ffff00",
      "value": 10,
      "spawnRate": 0.8,
      "effects": {
        "rotation": true,
        "glow": true,
        "sparkle": true
      }
    },
    "gems": {
      "model": "neon_gem",
      "scale": [0.4, 0.4, 0.4],
      "color": "#ff00ff",
      "value": 50,
      "spawnRate": 0.2,
      "effects": {
        "rotation": true,
        "glow": true,
        "rainbow": true
      }
    }
  },
  
  "environment": {
    "track": {
      "length": 1000,
      "width": 12,
      "segments": 100,
      "texture": "neon_track",
      "effects": {
        "flowing_lines": true,
        "pulse": true
      }
    },
    "background": {
      "skybox": "neon_city_skybox",
      "particles": {
        "enabled": true,
        "count": 1000,
        "color": "#00ffff",
        "size": 0.1,
        "speed": 0.5
      }
    },
    "lighting": {
      "ambient": {
        "color": "#001122",
        "intensity": 0.3
      },
      "directional": {
        "color": "#00ffff",
        "intensity": 0.8,
        "position": [0, 10, 5]
      },
      "point_lights": [
        {
          "color": "#ff00ff",
          "intensity": 1.0,
          "position": [0, 5, 0],
          "distance": 20
        }
      ]
    }
  },
  
  "audio": {
    "background_music": "neon_runner_theme",
    "sound_effects": {
      "jump": "jump_sound",
      "slide": "slide_sound",
      "collect": "collect_sound",
      "hit": "hit_sound",
      "powerup": "powerup_sound"
    },
    "volume": {
      "master": 0.8,
      "music": 0.6,
      "sfx": 0.9
    }
  },
  
  "physics": {
    "collision_detection": "bounding_box",
    "gravity": -25,
    "friction": 0.8,
    "bounce": 0.3,
    "max_velocity": 50
  },
  
  "ui": {
    "hud": {
      "score_position": "top_left",
      "health_position": "top_right",
      "powerup_position": "bottom_left",
      "speed_position": "bottom_right"
    },
    "menus": {
      "main_menu": "neon_main_menu",
      "pause_menu": "neon_pause_menu",
      "game_over": "neon_game_over",
      "settings": "neon_settings"
    }
  },
  
  "performance": {
    "target_fps": 60,
    "max_particles": 2000,
    "lod_distance": 50,
    "texture_quality": "high",
    "shadow_quality": "medium"
  },
  
  "controls": {
    "keyboard": {
      "left": "ArrowLeft",
      "right": "ArrowRight",
      "jump": "Space",
      "slide": "ArrowDown",
      "pause": "Escape"
    },
    "touch": {
      "swipe_left": "change_lane_left",
      "swipe_right": "change_lane_right",
      "tap": "jump",
      "swipe_down": "slide"
    }
  }
}
